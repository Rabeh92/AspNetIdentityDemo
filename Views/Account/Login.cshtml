@model AspNetIdentityDemo.ViewModel.LoginViewModel
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(vm => vm.UserName)
        @Html.TextBoxFor(vm => vm.UserName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(vm => vm.Password)
        @Html.PasswordFor(vm => vm.Password, new { @class = "form-control" })

    </div>
    <input type="submit" class="btn btn-primary" value="Submit" />
    <br />
    @Html.ActionLink("Forget password", "ForgotPassword", "Account")
}

